<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account"
    android:background="@color/red">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_profilepic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/textView6"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_evgo_business_1"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello "
                android:textSize="18sp"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="nikhildgowda963@gmail.com"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:background="@drawable/ic_curve_bg"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:src="@drawable/ic_profilepicfortextview"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/renderName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Name"
                    android:textSize="20sp"
                    android:gravity="left"
                    android:padding="10dp"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:src="@drawable/ic_shopicon"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/renderShopName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Shop name"
                    android:textSize="20sp"
                    android:gravity="left"
                    android:padding="10dp"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:src="@drawable/ic_phone"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/renderPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Phone number"
                    android:textSize="20sp"
                    android:gravity="left"
                    android:padding="10dp"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:src="@drawable/ic_address"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/renderAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Address"
                    android:textSize="20sp"
                    android:gravity="left"
                    android:padding="10dp"
                    android:layout_marginStart="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editInfo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_weight="1"
                    android:text="Edit Info"
                    app:cornerRadius="10dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signOut"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_weight="1"
                    android:text="Signout"
                    app:cornerRadius="10dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F3EDED"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menubar" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>